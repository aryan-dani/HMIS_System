{
	"name": "hmis-backend",
	"version": "1.0.0",
	"description": "Hospital Management Information System Backend",
	"main": "server.js",
	"scripts": {
		"start": "node server.js",
		"server": "nodemon server.js",
		"client": "npm start --prefix ../frontend",
		"dev": "concurrently \"npm run server\" \"npm run client\"",
		"heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix ../frontend && npm run build --prefix ../frontend"
	},
	"keywords": [
		"hospital",
		"management",
		"healthcare",
		"mern"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@supabase/supabase-js": "^2.49.4",
		"bcryptjs": "^2.4.3",
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"express-validator": "^7.0.1",
		"jsonwebtoken": "^9.0.0",
		"mongoose": "^7.1.0"
	},
	"devDependencies": {
		"concurrently": "^8.0.1",
		"cross-env": "^7.0.3",
		"nodemon": "^2.0.22"
	}
}
